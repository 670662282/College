<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jiangchen.college.views.TitleView
        android:id="@+id/safeset_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        app:tv_back_visibility="visable"
        app:tv_title="系统设置" />

    <com.jiangchen.college.views.UserInfoView
        android:id="@+id/safeset_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        app:usefinfo_label_text="手机号"
        app:userinfo_et_enable="false"
        app:userinfo_et_init=""
        app:userinfo_img_next_visibility="visiable"
        app:userinfo_img_visibility="gone" />

    <com.jiangchen.college.views.UserInfoView
        android:id="@+id/safeset_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        app:usefinfo_label_text="邮箱"
        app:userinfo_et_init=""
        app:userinfo_et_enable="false"
        app:userinfo_img_next_visibility="visiable"
        app:userinfo_img_visibility="gone">

    </com.jiangchen.college.views.UserInfoView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:src="@drawable/divider_land"/>

    <com.jiangchen.college.views.UserInfoView
        android:id="@+id/safeset_updatepwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        app:usefinfo_label_text="修改密码"
        app:userinfo_et_enable="false"
        app:userinfo_et_init=""
        app:userinfo_img_next_visibility="visiable"
        app:userinfo_img_visibility="gone">
    </com.jiangchen.college.views.UserInfoView>

</LinearLayout>