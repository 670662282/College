<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jiangchen.college.views.TitleView
        android:id="@+id/resetpwd_title"
        android:layout_width="match_parent"
        app:tv_tv_right_visibility="gone"
        app:tv_img_right_back_visibility="gone"
        app:tv_title="重置密码"
        android:layout_height="wrap_content">

    </com.jiangchen.college.views.TitleView>


    <TextView
        android:id="@+id/resetpwd_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="邮件："
        android:layout_margin="@dimen/margin_20"
        android:textSize="@dimen/title_frot_size_18"
        android:textColor="@color/title_color"
        />

    <Button
        android:id="@+id/bt_resetpwd"
        android:layout_width="match_parent"
        android:text="确认"
        android:layout_marginTop="@dimen/margin_20"
        android:textSize="@dimen/title_frot_size_18"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:textColor="@android:color/white"
        android:background="@drawable/selector_bt_bg_red"
        android:layout_height="wrap_content" />

</LinearLayout>